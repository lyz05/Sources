#include <cstdio>
#include <cstring>

using namespace std;

const int N=100000+2,M=500000+2;

struct node{
	int y,next;
} h[M];

int x,y,maxy,tot,tmp,ans,n,m;
int e[N],v[N],p[N];

void add(int x,int y)
{
	tot++;
	h[tot].y=y;
	h[tot].next=e[x];
	e[x]=tot;
}

void dfs(int dep)
{
	bool flag=true;
	if (dep>n)
	{
		if (tmp>ans) ans=tmp;
		return;
	}
	int i=e[dep],bak;
	while (i!=0)
	{
		if (h[i].y<=maxy) 
		{
			i=h[i].next;
			continue;
		}
		tmp+=v[dep];tmp+=p[h[i].y];
		bak=maxy;maxy=h[i].y;
		dfs(dep+1);
		maxy=bak;
		tmp-=v[dep];tmp-=p[h[i].y];
		i=h[i].next;
	}
	if (flag)
	{
		flag=false;
		dfs(dep+1);
	}
}
int main()
{
	freopen("watchdogs.in","r",stdin);
	//freopen("watchdogs.out","w",stdout);


	scanf("%d%d",&n,&m);
	for (int i=1;i<=n;i++)
	{
		scanf("%d%d",&x,&y);
		add(x,y);
	}
	for (int i=1;i<=n;i++) scanf("%d",p+i);
	for (int i=1;i<=n;i++) scanf("%d",v+i);
	
	dfs(1);
	printf("%d",ans);
}
